<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:fontFamily="@font/sf_ui_bold"
                android:text="Gate Pass No : " />

            <TextView
                android:id="@+id/tvGPNo"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/sf_ui_bold"
                android:text="125" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivPhoto"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="3dp"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEmp"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/sf_ui_regular"
                    android:text="Anmol Shirke" />

                <TextView
                    android:id="@+id/tvEmpMobile"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/sf_ui_regular"
                    android:text="9898989898" />

                <TextView
                    android:id="@+id/tvGatePass"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/sf_ui_regular"
                    android:text="Temporary" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightBlack"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:fontFamily="@font/sf_ui_bold"
                android:text="No of Hrs : "
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tvHrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textSize="15sp"
                android:fontFamily="@font/sf_ui_bold"
                android:text="2 ( 4:00 to 6:00 )"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSupName"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/sf_ui_regular"
                    android:text="Supervisor Name " />

                <TextView
                    android:id="@+id/tvSupMobile"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/sf_ui_regular"
                    android:text="9898989898" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOut"
                    android:layout_width="55dp"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/colorBlue"
                    android:fontFamily="@font/sf_ui_bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="OUT" />

                <TextView
                    android:id="@+id/tvIn"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textSize="15sp"
                    android:background="@color/colorGreen"
                    android:fontFamily="@font/sf_ui_bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="IN" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/sf_ui_bold"
                    android:text="Out Time : " />

                <TextView
                    android:id="@+id/tvOutTime"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/sf_ui_bold"
                    android:text="4:00 " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/sf_ui_bold"
                    android:text="In Time : " />

                <TextView
                    android:id="@+id/tvInTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/sf_ui_bold"
                    android:text="6:00 " />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:fontFamily="@font/sf_ui_bold"
                android:text="No of Hrs : " />

            <TextView
                android:id="@+id/tvTotalHrs"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/sf_ui_bold"
                android:text="2 " />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
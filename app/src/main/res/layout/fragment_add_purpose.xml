<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/ParentPadding"
    tools:context=".fragment.MaintenanceGatePassFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/sf_ui_regular"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Select Type"
                android:textSize="10sp" />

            <Spinner
                android:id="@+id/spType"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tvEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/sf_ui_regular"
                android:gravity="right"
                android:visibility="gone"
                android:text="Select Employee"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textEmployee"
                android:layout_width="match_parent"
                android:fontFamily="@font/sf_ui_regular"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:fontFamily="@font/sf_ui_regular"
                    android:id="@+id/edEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:inputType="none"
                    android:hint="Employee"
                    android:singleLine="false" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:fontFamily="@font/sf_ui_regular"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:fontFamily="@font/sf_ui_regular"
                    android:id="@+id/edPurposHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Purpose Heading"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/edDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:fontFamily="@font/sf_ui_regular"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/edRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remark"
                    android:fontFamily="@font/sf_ui_regular"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/edPassDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pass Duration"
                    android:visibility="gone"
                    android:fontFamily="@font/sf_ui_regular"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/sf_ui_bold"
                android:background="@drawable/rounded_cornner_buttons"
                android:text="Submit"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>